<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        >

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detailsToolBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/backArrow"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_backarow" />

                <Chronometer
                    android:id="@+id/timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/backArrow"
                    android:textColor="#000000"
                    android:textSize="35sp" />


                <TextView
                    android:id="@+id/steps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="100dp"
                    android:layout_toStartOf="@+id/next_level"
                    android:gravity="center_horizontal"
                    android:paddingLeft="200dp"
                    android:text="@string/_0"
                    android:textAlignment="center"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:visibility="visible"
                    app:layout_constraintEnd_toStartOf="@+id/replay_level" />

                <ImageView
                    android:id="@+id/replay_level"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/next_level"
                    android:layout_gravity="end"
                    android:layout_marginEnd="24dp"
                    android:layout_toStartOf="@+id/next_level_activated"
                    android:src="@drawable/ic_replay_level"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/steps" />

                <ImageView
                    android:id="@+id/next_level_activated"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="21dp"
                    android:gravity="end"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_next_level_activated"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/next_level"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"

                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/next_level_activated"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:src="@drawable/ic_next_level"
                    android:visibility="visible" />


            </RelativeLayout>


        </android.support.v7.widget.Toolbar>



    </android.support.design.widget.AppBarLayout>

</merge>